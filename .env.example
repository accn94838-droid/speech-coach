# FFmpeg путь (по умолчанию ищет в PATH)
FFMPEG_PATH=ffmpeg

# Whisper настройки
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# GigaChat API настройки (опционально)
GIGACHAT_ENABLED=false
GIGACHAT_API_KEY=your_gigachat_api_key_here
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_MODEL=GigaChat
GIGACHAT_TIMEOUT=30
GIGACHAT_MAX_TOKENS=2000

# Настройки валидации файлов
MAX_FILE_SIZE_MB=100
# Используйте JSON формат для списка или строку с разделителями
ALLOWED_VIDEO_EXTENSIONS=[".mp4", ".mov", ".avi", ".mkv", ".webm", ".flv", ".wmv", ".m4v"]
# ИЛИ: ALLOWED_VIDEO_EXTENSIONS=.mp4,.mov,.avi,.mkv,.webm,.flv,.wmv,.m4v
